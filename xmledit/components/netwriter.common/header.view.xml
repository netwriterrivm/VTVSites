<?xml version="1.0" encoding="utf-8" xmlns:edx="msnbc-edx-edit-view"  ?>
<!-- HEADER TEMPLATE -->
		<edx:template name="header" type="region" uiname="rsi.menu.insert.header">
			<edx:xhtml display="">
				<img edxtemplate="widget:icon.default"/>
				<h5 class="textHeader2" edxtemplate="headercont" edxpath="." />
			</edx:xhtml>
			<edx:xhtml display="1">
				<img edxtemplate="widget:icon.default"/>
				<h4 class="textHeader1" edxtemplate="headercont" edxpath="." />
			</edx:xhtml>
			<edx:xhtml display="2">
				<img edxtemplate="widget:icon.default"/>
				<h5 class="textHeader2" edxtemplate="headercont" edxpath="." />
			</edx:xhtml>
			<edx:xhtml display="3">
				<img edxtemplate="widget:icon.default"/>
				<h6 class="textHeader3" edxtemplate="headercont" edxpath="." />
			</edx:xhtml>
			<!-- INSERTION TEMPLATE -->
			<edx:insert allow_clipboard="true" allow_node_name_change="true">
				<header align="" level="2">[Plaats hier een kopregel]</header>
			</edx:insert>
			<edx:attributelist>
				<attribute name="level" uiname="rsi.edx.attribute.header.layout" applytocolumn="false" uiicon="">
						<option value="1">rsi.edx.attribute.header.1</option>					
						<option value="2">rsi.edx.attribute.header.2</option>					
						<option value="3">rsi.edx.attribute.header.3</option>
				</attribute>
			</edx:attributelist>
		</edx:template>
			<!-- HEADER CONTAINER TEMPLATE -->
		<edx:template name="headercont" type="container" uiname="rsi.menu.insert.header">
			<edx:match element="#text">
				<span edxtemplate="field:flow" edxpath="." ></span>
			</edx:match>
		</edx:template>
